{
  "functions": [
    {
      "source": "apps/server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "packages/firestore/firestore.rules",
    "indexes": "packages/firestore/firestore.indexes.json"
  },
  "storage": {
    "rules": "/packages/firebase-storage/storage.rules"
  }
}
